<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TSR.Public</title>
    <script type="importmap"></script>
    <link rel="icon" type="image/x-icon" href="~/images/LogoIconGreen@2x.png" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.min.css" />
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TSR.Public.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <header>
        <div class="main">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 right-data-wrapper">
                        <span class="calendar">
                            <!-- Static date/time format -->
                            Tue 11/12/2024 03:45 PM
                        </span>
                    </div>
                    <div class="col-md-6 left-data-wrapper">
                        <a class="width-auto m-2" href="/home/SetCulture?culture=ar&returnUrl=/">
                            <label style="color: white">العربية</label>
                        </a>
                        <a class="width-auto m-2" href="/home/SetCulture?culture=en&returnUrl=/">
                            <label style="color: white">English</label>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="sub">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <div class="logo-wrapper">
                            <img src="~/images/LogoColor.png" alt="Logo" style="width: 100px;" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <ul class="menu">
                            <li>السيارات</li>
                            <li>خدمات السيارات</li>
                            <li>الشركاء</li>
                            <li>تواصل معنا</li>
                            <li>عن الشركة</li>
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <ul class="action">
                            <li>
                                تسجيل الدخول
                            </li>
                            <li>
                                <div class="row-count">
                                    <span class="count">0</span>
                                    <i class="bi bi-heart menu-icon"></i>
                                </div>
                            </li>
                            <li>
                                <div class="row-count">
                                    <span class="count">0</span>
                                    <i class="bi bi-cart menu-icon"></i>
                                </div>
                            </li>
                            <li>0.00 <span class="font-lg icon-saudi_riyal"></span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>

    @RenderBody()


    <footer>
        <div class="site-footer">
            <div class="footer-row footer-widgets custom-background-light dark">
                <div class="container">
                    <div class="footer-inner">
                        <div class="footer-sidebar">
                            <div class="custom-column">
                                <div class="footerwidget widget widget_text">
                                    <div class="textwidget">
                                        <div class="widget_about_company custom-column">
                                            <div class="widget-body">
                                                <div class="company-logo">
                                                    <div class="logo-dark">
                                                        <div class="site-brand">
                                                            <img src="~/images/logo/LogoWhiteBrown.png"
                                                                style="width: 109px;" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="company-content">
                                                    <h3 class="entry-title">
                                                        الخيار الأول لحلول السيارات
                                                    </h3>
                                                    <div class="entry-description">
                                                        <p>شريكك الموثوق لكل ما هو متعلق بالسيارات</p>
                                                    </div>
                                                    <p>
                                                        <a class="mail" href="#"><span>info@tasier.com.sa</span></a>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- col -->
                            <div class="widgets-column">
                                <div class="row justify-content-between">
                                    <div class="col col-12 col-lg-5">
                                        <div class="footerwidget widget widget_text">
                                            <div class="textwidget">
                                                <div class="widget_contact" id="contact">
                                                    <h4 class="widget-title">تحتاج مساعدة</h4>
                                                    <div class="widget-body">
                                                        <div class="company-phone">920012345</div>
                                                        <div class="company-works">
                                                            <p>السبت&#8211; الخميس: 9:00-20:00</p>
                                                            <p>الجمعة : 11:00 &#8211; 15:00</p>
                                                        </div>
                                                        <p>
                                                            <a class="mail" href="#"><span>info@tasier.com.sa</span></a>
                                                        </p>
                                                        <div class="company-social"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- col -->
                                    <div class="col col-12 col-lg-3">
                                        <div class="footerwidget widget widget_nav_menu">
                                            <h4 class="widget-title">Customer Service</h4>
                                            <div class="menu-customer-service-container">
                                                <ul id="menu-customer-service" class="menu">
                                                    <li id="menu-item-3663"
                                                        class="menu-item menu-item-type-custom menu-item-object-custom menu-item-3663">
                                                        <a href="#">مركز الإتصال</a>
                                                    </li>
                                                    <li id="menu-item-3832"
                                                        class="menu-item menu-item-type-post_type menu-item-object-page menu-item-3832">
                                                        <a href="#">حسابي</a>
                                                    </li>
                                                    <li id="menu-item-3833"
                                                        class="menu-item menu-item-type-post_type menu-item-object-page menu-item-3833">
                                                        <a href="#">متابعة الطلبات</a>
                                                    </li>
                                                    <li id="menu-item-3834"
                                                        class="menu-item menu-item-type-post_type menu-item-object-page menu-item-3834">
                                                        <a href="#">قائمة المفضلات</a>
                                                    </li>
                                                    <li id="menu-item-3842"
                                                        class="menu-item menu-item-type-post_type menu-item-object-page menu-item-3842">
                                                        <a href="#">سياسة الإرجاع</a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- col -->
                                    <div class="col col-12 col-lg-3">
                                        <div class="footerwidget widget widget_nav_menu">
                                            <h4 class="widget-title">معلومات المتجر</h4>
                                            <div class="menu-store-information-container">
                                                <ul id="menu-store-information" class="menu">
                                                    <li id="menu-item-3835"
                                                        class="menu-item menu-item-type-post_type menu-item-object-page menu-item-3835">
                                                        <a href="#">عن متجر تسعير</a>
                                                    </li>
                                                    <li id="menu-item-3665"
                                                        class="menu-item menu-item-type-custom menu-item-object-custom menu-item-3665">
                                                        <a href="#">الأكثر مبيعا</a>
                                                    </li>
                                                    <li id="menu-item-3666"
                                                        class="menu-item menu-item-type-custom menu-item-object-custom menu-item-3666">
                                                        <a href="#">وصل حديثا</a>
                                                    </li>
                                                    <li id="menu-item-3667"
                                                        class="menu-item menu-item-type-custom menu-item-object-custom menu-item-3667">
                                                        <a href="#">احدث العروض</a>
                                                    </li>
                                                    <li id="menu-item-3669"
                                                        class="menu-item menu-item-type-custom menu-item-object-custom menu-item-3669">
                                                        <a href="#">برنامج المسوقين</a>
                                                    </li>
                                                    <li id="menu-item-3670"
                                                        class="menu-item menu-item-type-custom menu-item-object-custom menu-item-3670">
                                                        <a href="#">بيع في تسعير</a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- col -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer-row footer-copyright border-boxed custom-background-light dark">
                <div class="container">
                    <div class="footer-inner">
                        <div class="copyright-row">
                            <nav class="footer-menu">
                                <ul id="menu-footer-menu" class="menu">
                                    <li id="menu-item-3865"
                                        class="menu-item menu-item-type-post_type menu-item-object-page menu-item-privacy-policy menu-item-3865">
                                        <a href="#">سياسة الخصوصية</a>
                                    </li>
                                    <li id="menu-item-3863"
                                        class="menu-item menu-item-type-post_type menu-item-object-page menu-item-3863">
                                        <a href="#">متابعة الطلب</a>
                                    </li>
                                    <li id="menu-item-4116"
                                        class="menu-item menu-item-type-post_type menu-item-object-page menu-item-4116">
                                        <a href="#">الشروط والأحكام</a>
                                    </li>
                                    <li id="menu-item-3864"
                                        class="menu-item menu-item-type-post_type menu-item-object-page menu-item-3864">
                                        <a href="#">سياسة الإرجاع</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                        <div class="copyright-row">
                            <div class="column">
                                <div class="site-copyright">
                                    <p>Copyright 2025 © reserved.</p>
                                </div>
                            </div>
                            <div class="column">
                                <div class="card-icons">
                                    <a href="#">
                                        <img alt="payment" class="credit-cards" src="~/images/credit-cards.png" />
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="copyright-row">
                            <div class="mobile-app-content">
                                <span>حمل تطبيق الجوال </span>
                                <div class="buttons">
                                    <a class="apple-store" href="#">
                                        <img alt="app" src="~/images/app-store.png" />
                                    </a>
                                    <a class="apple-store" href="#">
                                        <img alt="app" src="~/images/google-play.png" />
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="pattern">
                <img src="~/images/logo/pattern.png" alt="" style="height: 400px;width: 500px;"  />
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
